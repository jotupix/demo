<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/com_area_code"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:hint="@string/area_code"
        android:inputType="number"
        android:lines="1"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cccccc"
        android:singleLine="true"
        android:textSize="15sp"
        android:saveEnabled="false"/>

    <View
        android:id="@+id/code_line"
        android:layout_width="12dp"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/com_area_code"
        android:layout_toRightOf="@+id/com_area_code"
        android:background="@color/color_999999"/>

    <EditText
        android:id="@+id/com_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/code_line"
        android:layout_toRightOf="@+id/code_line"
        android:background="@null"
        android:hint="@string/tel_or_mobilephone"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLength="11"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cccccc"
        android:textSize="15sp"
        android:saveEnabled="false"/>
    <View
        android:id="@+id/code_line2"
        android:layout_width="12dp"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/com_phone"
        android:layout_toRightOf="@+id/com_phone"
        android:background="@color/color_999999"/>
    <EditText
        android:id="@+id/com_extension"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/code_line2"
        android:layout_toRightOf="@+id/code_line2"
        android:background="@null"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cccccc"
        android:hint="@string/ext_number"
        android:textSize="15sp"
        android:saveEnabled="false"/>

</RelativeLayout>