<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@android:id/background">
        <shape>
            <corners android:radius="16dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/color_364866"
                android:centerY="0.45"
                android:endColor="@color/color_364866"
                android:startColor="@color/color_364866" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="16dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/color_7a6aee"
                    android:centerY="0.45"
                    android:endColor="@color/color_7a6aee"
                    android:startColor="@color/color_7a6aee" />
            </shape>
        </clip>
    </item>

</layer-list>

